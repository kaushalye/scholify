<%= link_to 'Back', scholarships_path %>
<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading"><h4>Scholarship for  <%= link_to @scholarship.student do%>  <%= @scholarship.student.full_name %> <% end %></h4></div>
  <div class="panel-body">
    <p>
      <strong>Amount:</strong>
      <%= @scholarship.amount %>
    </p>

    <p>
      <strong>Start date:</strong>
      <%= @scholarship.start_date %>
    </p>

    <p>
      <strong>End date:</strong>
      <%= @scholarship.end_date %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @scholarship.status %>
    </p>
    <p>
      <strong>Sponsor:</strong>
      <%= link_to @scholarship.sponsor do%>  <%= @scholarship.sponsor.full_name %> <% end %>
    </p>
    <br/>
  </div>
</div>
<div class="text-info">
  Last payment received for <%#= @scholarship.format_payment(@scholarship.last_payment) %>
</div>
<div class="panel panel-default">
  <div class="panel-heading"><h4>Past Payments</h4></div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Payment Id</th>
        <th>Amount LKR</th>
        <th>Amount $AU</th>
        <th>Year</th>
        <th>Month</th>
        <th>Notes</th>
      </tr>
      </thead>
      <tbody>
      <% @scholarship.past_payments.each do |payment| %>
        <tr>
          <td><%= link_to payment do %><%= payment.id%><% end %></td>
          <td><%= payment.amount %></td>
          <td><%= number_to_currency(payment.amount_aud) %></td>
          <td><%= payment.effective_year %></td>
          <td><%= payment.effective_month %></td>
          <td><%= payment.notes %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>




