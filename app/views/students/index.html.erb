<p id="notice"><%= notice %></p>

<h1>Students</h1>
<%= link_to 'New Student', new_student_path, class: "btn btn-primary"  %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Faculty</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.email %></td>
        <td><%= student.phone %></td>
        <td><%= student.address %></td>
        <td><%= student.faculty %></td>
        <td><%= student.department %></td>
        <td><%= link_to 'View', student , class: "btn btn-info glyphicon glyphicon-info-sign" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning glyphicon glyphicon-edit" %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?'} , class: "btn btn-danger glyphicon glyphicon-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

