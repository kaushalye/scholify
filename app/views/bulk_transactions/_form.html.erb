<%= form_for(@bulk_transaction) do |f| %>
  <% if @bulk_transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bulk_transaction.errors.count, "error") %> prohibited this bulk_transaction from being
        saved:</h2>

      <ul>
        <% @bulk_transaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-body">
          <div class="row">
            <div class="col-md-2 form-group">
              <%= f.label :amount_lkr %>
              <span class="input-group">
              <span class="input-group-addon">Rs</span><%= f.number_field :amount, class: "form-control currency rate_calc", :required => true, :id => "amount_lkr", :value => @bulk_transaction.eligible_payments.map { |h| h['amount']}.sum %>
              </span>
            </div>
            <div class="col-md-2 form-group">
              (/) <%= f.label :rate%>
              <%= f.number_field :rate, class: "form-control rate_calc", :id => "aud_lkr_rate" %>
            </div>
            <div class="col-md-2" >
            </div>
            <div class="col-md-3 form-group">
              <%= f.label :"(=)"%>
              <span class="input-group">
              <span class="input-group-addon">AU $</span><%= f.text_field :amount, class: "form-control currency",:readonly => true, :id => "amount_aud" %>
            </span>
            </div>
          </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5 form-group">
        <%= f.label :sender %>
        <%= f.text_field :sender, class: "form-control" %>
      </div>
      <div class="col-md-5 form-group">
        <%= f.label :beneficiary %>
        <%= f.text_field :beneficiary, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 form-group">
        <%= f.label :"Cheque number" %><br>
        <%= f.text_field :chq_no , class: "form-control"%>
      </div>
      <div class="col-md-3 form-group">
        <%= f.label :"Bank Account" %><br>
        <%= f.text_field :bank_acc, class: "form-control" %>
      </div>
      <div class="col-md-3 form-group">
        <%= f.label :bank_date %><br>
        <%= f.date_select :bank_date %>
      </div>
      <div class="col-md-3 form-group">
        <%= f.label :settled_date %><br>
        <%= f.date_select :settled_date %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2 form-group">
        <%= f.label :effective_year %><br>
        <%= f.number_field :effective_year, class: "form-control" %>
      </div>
      <div class="col-md-2 form-group">
        <%= f.label :effective_months %><br>
        <%= f.number_field :effective_months, class: "form-control" %>
      </div>
      <div class="col-md-8 form-group">
        <%= f.label :notes %><br>
        <%= f.text_area :notes, class: "form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-primary"%>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading"><h4>Pending payments <span class="text-danger"> - Total: Rs <%= number_with_delimiter(@bulk_transaction.eligible_payments.map { |h| h['amount']}.sum, :demimiter => ',') %> </span>  </h4></div>
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Scholarship</th>
            <th>Start date</th>
            <th>Student</th>
            <th>Year - Month</th>
            <th>Status</th>
            <th>Amount (Rs.)</th>
          </tr>
          </thead>
          <tbody>
          <% @bulk_transaction.eligible_payments.each do |payment| %>
            <tr>
              <td><%= payment['schol_id']%></td>
              <td><%= payment['schol_start']%></td>
              <td><%= payment['student_full_name']%></td>
              <td><%= payment['year']%> - <%= payment['month']%></td>
              <td><%= payment['status']%></td>
              <td><%= payment['amount']%></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>


  </div>


<% end %>
