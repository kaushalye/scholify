<p id="notice"><%= notice %></p>


<div class="panel panel-default">
  <div class="panel-heading"><h4>Pending payments </h4></div>
  <div class="panel-body">
    <% if Payment.eligible_payments.size > 0 %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th></th>
        <th>Student</th>
        <th>Year - Payment</th>
        <th>Scholarship Id</th>
        <th>Status</th>
        <th>Amount (Rs.)</th>
      </tr>
      </thead>
      <tbody>
      <% Payment.eligible_payments.each do |payment| %>
        <tr>
          <td><input type="checkbox" class="payment_check" checked name="f_month" value="<%= payment.scholarship.id %>.<%= payment.month %>"/></td>
          <td><%= payment.scholarship.student.full_name %></td>
          <td><%= payment.month / 10 %>-<%= payment.month % 10 %></td>
          <td><%= payment.scholarship.id %> </td>
          <td><%= payment.scholarship.status %></td>
          <td><%= payment.scholarship.amount %></td>
        </tr>
      <% end %>
      </tbody>
      <tfoot>
      <tr>
        <td colspan="6"><button type="button" id="payments_save" class= "btn btn-primary">Save selected</button></td>
      </tr>
      </tfoot>
    </table>
    <% else %>
      <span>You do not have any pending payments</span>
    <% end %>
  </div>
</div>


<br/>

<div class="panel panel-default">
  <div class="panel-heading"><h4>Past payments </h4></div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Student</th>
        <th>Scholarship</th>
        <th>Payment</th>
        <th>Amount (Rs)</th>
        <th>From Acc.</th>
        <th>To Acc.</th>
        <th>External Ref.</th>
        <th>Notes</th>
      </tr>
      </thead>


      <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.student.full_name %></td>
          <td><%= payment.scholarship.id %></td>
          <td><%= payment.month / 10 %> - <%= payment.month % 10 %></td>
          <td><%= payment.amount %></td>
          <td><%= payment.from_account %></td>
          <td><%= payment.to_account %></td>
          <td><%= payment.external_ref %></td>
          <td><%= payment.notes %></td>
          <!--<td><%= link_to '', payment, method: :delete, data: { confirm: 'Are you sure?' }, class: "  glyphicon glyphicon-remove" %></td>-->
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


