<p id="notice"><%= notice %></p>


<h1>Sponsors</h1>
<%= link_to 'New Sponsor', new_sponsor_path, class: "btn btn-primary"  %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.title %></td>
        <td><%= sponsor.full_name %></td>
        <td><%= sponsor.email %></td>
        <td><%= sponsor.phone %></td>
        <td><%= link_to 'View', sponsor, class: "btn btn-info glyphicon glyphicon-info-sign"%></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor),  class: "btn btn-warning glyphicon glyphicon-edit" %></td>
        <td><%= link_to 'Delete', sponsor, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger glyphicon glyphicon-remove"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


