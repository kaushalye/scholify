<p id="notice"><%= notice %></p>

<h1>Sponsors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.title %></td>
        <td><%= sponsor.first_name %></td>
        <td><%= sponsor.last_name %></td>
        <td><%= sponsor.email %></td>
        <td><%= sponsor.phone %></td>
        <td><%= link_to '', sponsor, class: "btn btn-info glyphicon glyphicon-info-sign"%></td>
        <td><%= link_to '', edit_sponsor_path(sponsor),  class: "btn btn-warning glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', sponsor, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger glyphicon glyphicon-remove"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sponsor', new_sponsor_path, class: "btn btn-primary"  %>
